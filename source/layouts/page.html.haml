= wrap_layout :application do
  - if current_page.data.cover
    - image_url = image_path(current_page.data.cover)
  %header.page-cover{:style => "background-image: url('#{image_url}')"}
    %h1.page-title= current_page.data.title
    - if current_page.data.author
      %h3.page-author= current_page.data.author
  %article.page-content
    %main.page-main-column
      = yield
    %aside.page-sidebar-column.mobile-hide
      .page-sidebar-inner
        %ul
          %li
            %h5= title
          - chapters.each do |chapter|
            - if current_page.data.title == chapter.title
              %li
                %strong= chapter.title
                - if current_page.data.sections
                  %ul.section-nav
            - else
              %li= link_to chapter.title, chapter
